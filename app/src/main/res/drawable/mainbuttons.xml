<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="7dp" />
            <gradient android:endColor="#a8c0ff" android:startColor="#3f2b96" android:type="linear" />
            <stroke android:width="10px" android:color="#000000" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" android:radius="10dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" />
            <solid android:color="#FFFDE4" />
            <stroke android:width="10px" android:color="#000000" />
        </shape>
    </item>

</selector>